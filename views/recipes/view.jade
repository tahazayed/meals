extends ../base.jade

block content
  h3 Book
    small

  .btn-group
    a(href="/recipes/#{recipe.id}/edit", class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit recipe
    a(href="/recipes/#{recipe.id}/delete", class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete recipe

  .media
    .media-body
      h4= recipe.n
        | &nbsp;
        small= recipe.pub
      h5 By #{recipe.auth.n||'unknown'}
      img(src=recipe.img, width='150', height='150')
