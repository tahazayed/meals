// [START form]
extends ../base.jade

block content
  h3 #{action} recipe
  form(method="POST")
    .form-group
      label(for="n") Title
      input.form-control(type="text", name="n", id="title", value=recipe.n)
    .form-group
      label(for="auth.n") Author
      input.form-control(type="text", name="auth.n", id="author", value=recipe.auth.n)
    .form-group
      label(for="tags") Category
      input.form-control(type="text", name="tags", id="category", value=recipe.tags)
    .form-group
      label(for="pub") Date Published
      input.form-control(type="text", name="pub", id="publishedDate", value=recipe.pub)
  
    .form-group
    button.btn.btn-success(type="submit") Save

// [END form]

block scripts
    <script src="/static/js/jquery.min.js"></script>
    <link rel="stylesheet" href="/static/css/jquery-ui.min.css">
    <script src="/static/js/jquery-ui-1.12.1/jquery-ui.min.js"></script>
    <script src="/static/js/ac.js"></script>
    <script src="/static/js/proac.js"></script> 	
